@{
    ViewData["Title"] = "Home Page";
}

<div class="g-pa-20">
    <div class="row text-center" style="padding: 0 15%">
        <div class="col-md-9">
            <div class="form-group g-mb-30">
                <div class="g-pos-rel">
                    <button class="btn u-input-btn--v1 g-width-40 g-bg-primary g-rounded-right-4" type="submit">
                        <i class="hs-admin-search g-absolute-centered g-font-size-16 g-color-white"></i>
                    </button>
                    <input id="inputGroup-1_4" class="form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3 g-rounded-4 g-px-14 g-py-10" placeholder="Search" type="text">
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <label class="form-check-inline u-check g-pl-25 pull-left" style="padding: 10px 0;">
                <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" type="checkbox">
                <div class="u-check-icon-checkbox-v6 g-absolute-centered--y g-left-0">
                    <i class="fa" data-check-icon=""></i>
                </div>
                Include Inactive Employee
            </label>
        </div>
    </div>
    <div class="row btn-add-employee">
        <div class="col-sm-12">
            <div class="btn-add-employee">
                <button class="btn btn-primary pull-right btn-new-employee">Add New Employee</button>
            </div>
        </div>
    </div>
    <div id="grid" class="g-mb-40"></div>
    <!-- Modal Create -->
    <div id="myModal" class="modal fade g-mb-40" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Employee</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="mdl-employee-form">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/base/generate-dom.js"></script>
    <script type="text/javascript" src="~/js/app/employee/grid-employee.js"></script>
    <script type="text/javascript" src="~/js/app/employee/create-employee.js"></script>
}
